{
  "name": "Sylverant Realtime",
  "version": "1.0.0",
  "version_name": "V-1.0.0",
  "manifest_version": 2,
  "description": "Sylverant Realtime is a web extension for the Phantasy Star Online Dreamcast private server. Game Guides, realtime updates, and more!",
  "homepage_url": "https://sylverant.net/",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Sylverant Realtime Portal",
    "default_icon": "icon.png",
    "default_popup": "portal.html"
  },
  "permissions": [
    "https://sylverant.net/",
    "tabs"
  ]
}