{
  "name": "Sylverant Realtime",
  "version": "2.0.0",
  "version_name": "V-2.0.0",
  "manifest_version": 2,
  "description": "Sylverant Realtime is a web extension for the DC, GC, and PC private server's website that provides: Realtime Player Count, PSO Resources, and more!",
  "homepage_url": "https://sylverant.net/",
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Sylverant Realtime Portal",
    "default_icon": "icon.png",
    "default_popup": "portal.html"
  },
  "permissions": [
    "https://sylverant.net/",
    "tabs"
  ]
}